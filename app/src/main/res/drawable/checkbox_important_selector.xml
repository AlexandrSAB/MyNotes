<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Выбранное состояние (checked) - красная иконка -->
    <item android:state_checked="true" android:drawable="@drawable/important" />

    <!-- Невыбранное состояние (unchecked) - белая иконка -->
    <item android:state_checked="false" android:drawable="@drawable/not_important" />
</selector>